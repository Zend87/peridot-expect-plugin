{
    "name": "expectation/peridot-expectation",
    "description": "Expectation for peridot",
    "keywords": [
        "expect", "assert", "test", "peridot", "peridot-php", "plugin"
    ],
    "require": {
        "php": ">=5.4.0",
        "peridot-php/peridot": "~1.8",
        "expectation/expectation": "~1.4"
    },
    "require-dev": {
        "cloak/cloak": "1.4.*",
        "cloak/coverallskit": "1.3.*",
        "phpspec/prophecy": "@stable",
        "beberlei/assert": "2.1.*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Noritaka Horio",
            "email": "holy.shared.design@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "expectation\\peridot\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/peridot spec",
        "coveralls": "php script/coveralls.php"
    },
    "minimum-stability": "stable"
}

