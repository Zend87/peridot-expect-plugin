{
    "name": "expectation/peridot-expectation",
    "description": "Expectation for peridot",
    "keywords": [
        "expect", "assert", "test", "peridot"
    ],
    "require": {
        "php": ">=5.4.0",
        "peridot-php/peridot": "~1.7",
        "expectation/expectation": "1.3.*"
    },
    "require-dev": {
        "cloak/coverallskit": "1.3.*",
        "phpspec/prophecy": "@stable",
        "beberlei/assert": "2.0.*"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Noritaka Horio",
            "email": "holy.shared.design@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "expectation\\peridot\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/peridot spec",
        "coveralls": "php script/coveralls.php"
    },
    "minimum-stability": "stable"
}
