{
    "name": "expectation/peridot-expectation",
    "description": "Expectation for peridot",
    "keywords": [
        "expect", "assert", "test", "peridot", "peridot-php", "plugin"
    ],
    "require": {
        "php": ">=5.4.0",
        "peridot-php/peridot": "~1.15",
        "expect/expect": "~0.5"
    },
    "require-dev": {
        "cloak/peridot-cloak-plugin": "~1.3",
        "cloak/robo-coveralls-kit": "~1.1",
        "robo-peridot/robo-peridot": "~1.1",
        "phpspec/prophecy": "~1.4",
        "beberlei/assert": "~2.3",
        "codegyre/robo": "~0.5"
    },
    "license": "MIT",
    "authors": [
        {
            "name": "Noritaka Horio",
            "email": "holy.shared.design@gmail.com"
        }
    ],
    "autoload": {
        "psr-4": {
            "expectation\\peridot\\": "src/"
        }
    },
    "scripts": {
        "test": "vendor/bin/robo spec:all",
        "coveralls": "vendor/bin/robo coveralls:upload"
    },
    "minimum-stability": "stable"
}
